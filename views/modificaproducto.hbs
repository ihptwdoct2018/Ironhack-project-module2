<div class="container bgd">
  <div class="">
    <div class="info-form">
      <form class="md-form" action="/administrartienda/modificaproducto/{{anuncio.tienda_id}}/{{anuncio._id}}" method="post">
        <div class="form-group contenedor">
          <label for="titulo">Titulo anuncio: </label>
          <input class="form-control" type="text" name="titulo" value="{{anuncio.titulo}}" required="required" placeholder="Ingresa titulo anuncio">
        </div>

        <div class="form-group contenedor">
          <label for="descripcion">Descripcion anuncio: </label>
          <input class="form-control" type="text" name="descripcion" value="{{anuncio.descripcion}}" required="required" placeholder="Ingresa descripcion">
        </div>

        <div class="form-group contenedor">
          <label for="precio">Precio: </label>
          <input class="form-control" type="text" name="precio" value="{{anuncio.precio}}" required="required" placeholder="Ingresa precio">
        </div>

        <div class="form-group contenedor">
          <label for="stock">Existencias: </label>
          <input class="form-control" type="text" name="stock" value="{{anuncio.stock}}" required="required" placeholder="Ingresa existencias">
        </div>
        <button class="btn btn-primary contenedor" type="submit" name="" value="">Actualizar</button>
      </form>
    </div>
  </div>
</div>
